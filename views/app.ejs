<%- include('header'); -%>
    <div class="box" id="heading">
        <h1>
            <%= weekday %>
        </h1>
    </div>
    <div class="box">
        <% for(var i=0; i<items.length; i++){ %>
            <div class="item">
                <form action="/delete" method="post">
                    <button class="delete">
                        <img src="images/cancel.png">
                    </button>
                </form>
                <p>
                    <%= items[i].name %>
                        </>
            </div>
            <% } %>
                <form action="/" method="post" class="item">
                    <input type="text" name="pending" placeholder="Enter Your Task" required autocomplete="off">
                    <button type="submit">+</button>

                </form>
    </div>
    <%- include('footer'); -%>