<%- include('header'); -%>
    <div class="box" id="heading">
        <h1>
            <%= weekday %>
        </h1>
    </div>
    <div class="box">
        <% for(var i=0; i<items.length; i++){ %>
            <div class="item">
                <input type="checkbox" name="checkbox">
                <p>
                    <%= items[i].name %>
                        </>
            </div>

            <% } %>
                <form action="/" method="post" class="item">
                    <input type="text" name="pending" placeholder="Enter Your Task" required autocomplete="off">
                    <button type="submit">+</button>

                </form>

    </div>
    <div class=" weather box">
        <p class="icon">
            <%= temperature %>
                <%= city_name %>
        </p>
        <i class="owf owf-3x  icon owf-<%= status_code%>"></i>
    </div>

    <%- include('footer'); -%>